<?xml version="1.0" encoding="utf-8"?>
<ru.ifmo.android_2016.viewdemo.group.DiagonalViewGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.ifmo.android_2016.viewdemo.group.ContainersActivity">
    <ru.ifmo.android_2016.viewdemo.brush.BrushView
        android:id="@+id/brush1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#10ff0000"
        />
    <ru.ifmo.android_2016.viewdemo.brush.BrushView
        android:id="@+id/brush2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1000ff00"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пример контейнера"
        android:gravity="center"
        android:background="#10000000"
        />
    <ru.ifmo.android_2016.viewdemo.brush.BrushView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#100000ff"
        />
    <ru.ifmo.android_2016.viewdemo.brush.BrushView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#10ffff00"
        />
</ru.ifmo.android_2016.viewdemo.group.DiagonalViewGroup>
